{
  "name": "Discord Bot Dev",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "bot",
  "workspaceFolder": "/app",

  // VSCodeがコンテナ内で起動した時に、自動で入れてほしい拡張機能
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "prisma.prisma" 
      ]
    }
  },

  // 終了時にコンテナを止めない設定（開発しやすくするため）
  "shutdownAction": "none"
}